:ruby
  players   = @game.users.where observer: false
  observers = @game.users.where observer: true

#user_kick_list
  - if players.any?
    %table.table.table-hover.table-condensed
      %thead
        %tr
          %td Players:
      %tbody
        - @game.users.where(observer: false).order(:name).each do |user|
          %tr
            %td= user.name
            %td= kick_link user

  - if observers.any?
    %table.table.table-hover.table-condensed
      %thead
        %tr
          %td Observers:

      %tbody
        - @game.users.where(observer: true).order(:name).each do |user|
          %tr
            %td= user.name
            %td= kick_link user
