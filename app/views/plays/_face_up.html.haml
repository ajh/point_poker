:ruby
  ten_cards_count = (play.value / 10.0).floor
  remainder = play.value % 10
  width = 5 + (1.5 * ten_cards_count)

%div.play{id: dom_id(play), style: "width: #{width}em;"}

  %div
    -# TODO: refactor this with the code in _form
    %ul.hand
      - ten_cards_count.times do
        %li.card.spades.rank-10
          %span.rank 10
          %span.suit &spades;
      - if remainder > 0 || ten_cards_count == 0
        %li.card.spades{class: "rank-#{remainder}"}
          %span.rank= remainder
          %span.suit &spades;

  %div.text-center= play.value
  %div.text-center= play.user_name
