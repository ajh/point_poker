%div.panel.panel-default.round{id: dom_id(round), class: round.complete? ? 'panel-info' : 'panel-primary' }
  %div.panel-heading.text-center{id: dom_id(round, 'heading'), role: 'tab'}
    %h4.panel-title
      %a{ 'data-toggle' => 'collapse', 'href' => dom_id(round, '#collapse'), 'aria-expanded' => true, 'aria-controls' => dom_id(round, 'collapse') }
        Story
        = round.description
        - if round.complete?
          %span.badge= round.mean

  %div.panel-collapse.collapse.in{ id: dom_id(round, 'collapse'), 'aria-labelledby' => dom_id(round, 'heading') }
    %div.panel-body
      %div.plays.playingCards
        - if !round.complete? && round.plays.find_by_user_id(session[:user_id]).blank?
          = render 'plays/potential'

        - round.plays.each do |play|
          = render play

      - if !round.complete? && round.plays.find_by_user_id(session[:user_id]).blank?
        %div.create_play
          %hr
          %h5 Choose card:
          = render partial: 'plays/form', locals: {round: round, play: round.plays.build}
