%div#game{ data: {version: @game.lock_version, websocket_url: websocket_url, channel: @game.token, game_changes_url: game_changes_since_url(@game, 'replace_me')}}
  %h1.text-center.text-capitalize= @game.name

  = render partial: 'stories/stories', locals: {stories: @game.stories.order(:created_at)}

  - if @game.stories.any?
    %div
      = render partial: 'stories/form', locals: {game: @game, story: @game.stories.build}
  - else
    = render partial: 'stories/long_form', locals: {game: @game, story: @game.stories.build}
